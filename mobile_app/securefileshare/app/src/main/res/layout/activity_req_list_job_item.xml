<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/list_item_status_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:paddingEnd="0dp"
        android:textSize="10sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:text="@string/status_label"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/list_item_status_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="10sp"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/list_item_status_label"
        android:layout_alignTop="@+id/list_item_status_label"
        android:layout_toEndOf="@+id/list_item_status_label"/>

    <TextView
        android:id="@+id/list_item_user_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:paddingEnd="0dp"
        android:textSize="10sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_below="@+id/list_item_status_label" />

    <TextView
        android:id="@+id/list_item_user_name_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="10sp"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/list_item_user_name_label"
        android:layout_alignTop="@+id/list_item_user_name_label"
        android:layout_toEndOf="@+id/list_item_user_name_label"/>

    <TextView
        android:id="@+id/list_item_contact_number_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:paddingEnd="0dp"
        android:textSize="10sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:text="@string/contact_number_label"
        android:layout_alignBottom="@+id/list_item_user_name_field"
        android:layout_alignTop="@+id/list_item_user_name_field"
        android:layout_toEndOf="@+id/list_item_user_name_field" />

    <TextView
        android:id="@+id/list_item_contact_number_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="10sp"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/list_item_contact_number_label"
        android:layout_alignTop="@+id/list_item_contact_number_label"
        android:layout_toEndOf="@+id/list_item_contact_number_label"/>

    <TextView
        android:id="@+id/list_item_file_hash_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:paddingEnd="0dp"
        android:textSize="10sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:text="@string/file_hash_label"
        android:layout_below="@+id/list_item_user_name_label"/>

    <TextView
        android:id="@+id/list_item_file_hash_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="10sp"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/list_item_file_hash_label"
        android:layout_alignTop="@+id/list_item_file_hash_label"
        android:layout_toEndOf="@+id/list_item_file_hash_label"/>
</RelativeLayout>